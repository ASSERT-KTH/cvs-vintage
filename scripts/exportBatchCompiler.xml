<?xml version="1.0" encoding="UTF-8"?>

<!-- build script to create a compiler from org.eclipse.jdt.core -->
<project name="org.eclipse.jdt.core.compiler" default="export" basedir="..">
	<target name="init">
		<tstamp/>
		<property name="destdir" value="../../plugin-export" />
		<property name="dest"  value="${destdir}/org.eclipse.jdt.core.compiler" />
	</target>

	<target name="export" depends="init">

		<echo message="TARGET: ${destdir}" />
		<mkdir dir="${destdir}" />
		<delete dir="${dest}" />
		<mkdir dir="${dest}" />

		<echo message="UPDATE jdtcompiler.jar" />
		<jar 
			jarfile="${dest}/jdtcompiler.jar"
			basedir="bin"
			includes="org/eclipse/jdt/internal/compiler/**" />
		
	
	</target>
</project>
