<project name="carol_jdoc" default="dist">

	<property name="jdoc.name" value="carol"/>
	<property name="jdoc.dir" value="${dist.jdoc}/${jdoc.name}"/>

	<target name="dist">
        <uptodate property="jdoc.required" targetfile="${jdoc.dir}/index.html">
			<srcfiles dir="${src}" includes="**/*.java"/>
		</uptodate>
		<antcall target="dist.jdoc.${jdoc.name}"/>
	</target>

	<target name="dist.jdoc.carol" unless="jdoc.required">
		<mkdir dir="${dist.jdoc}/carol"/>
		<javadocMultipleLink packagenames="org.objectweb.*"
				destdir="${dist.jdoc}/carol"
				windowtitle="Objectweb Common Architecture for RMI ObjectWeb Layer API"
				doctitle="Objectweb Common Architecture for RMI ObjectWeb Layer "
				sourcepath="${src}" author="true" version="true"
				use="true"/>
	</target>
</project>
