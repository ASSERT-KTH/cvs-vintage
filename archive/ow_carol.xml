<project name="carol.archive" default="dist.jar">
  <target name="dist.jar">
    <!-- CAROL JAR -->
    <jar destfile="${dist.lib}/ow_carol.jar">
      <fileset dir="${build}/classes">
        <include name="**/*.class"/>
        <include name="carol-defaults.properties"/>
        <exclude name="**/jtests/**/*.class"/>
      </fileset>
      <fileset dir="${src}">
        <include name="org/objectweb/carol/cmi/compiler/dtd/*.dtd"/>
        <include name="org/objectweb/carol/cmi/compiler/*.vm"/>
      </fileset>
      <manifest>
        <attribute name="Specification-Title" value="${carol.name}" />
        <attribute name="Specification-Version" value="${carol.version}" />
        <attribute name="Specification-Vendor" value="ObjectWeb" />
        <attribute name="Implementation-Title" value="${carol.package}" />
        <attribute name="Implementation-Version" value="${carol.version}" />
        <attribute name="Implementation-Vendor" value="INRIA" />
      </manifest>
    </jar>
  </target>
</project>
