<project name="carol.archive" default="dist.jar">
  <target name="dist.jar">
    <!-- CAROL JAR -->
    <jar jarfile="${dist.lib}/carol.jar" basedir="${build}/classes"
      manifest="${archive}/carol.mf"
      includes="**/*.class,carol-defaults.properties"
      excludes="**/jtests/**/*.class"/>
    <jar jarfile="${dist.lib}/carol.jar" basedir="${src}"
      includes="org/objectweb/carol/cmi/compiler/dtd/*.dtd,org/objectweb/carol/cmi/compiler/*.vm"
      update="true"/>
  </target>
</project>
