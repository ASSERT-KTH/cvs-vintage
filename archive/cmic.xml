<project name="carol.cmic.archive" default="dist.jar">
  <target name="dist.jar">
    <!-- CMIC JAR -->
    <jar jarfile="${dist.lib}/cmic.jar">
      <manifest>
        <attribute name="Manifest-Version" value="1.0"/>
        <attribute name="Specification-Title" value="cluster method invocation compiler"/>
        <attribute name="Specification-Version" value="${carol.version}"/>
        <attribute name="Specification-Vendor" value="ObjectWeb"/>
        <attribute name="Implementation-Title" value="org.objectweb.carol.cmi.compilere.Compiler"/>
        <attribute name="Implementation-Version" value="${carol.version}"/>
        <attribute name="Implementation-Vendor" value="INRIA"/>
        <attribute name="Main-Class" value="org.objectweb.carol.cmi.compiler.Compiler"/>
        <attribute name="Class-Path" value="ow_carol.jar"/>
      </manifest>
    </jar>
  </target>
</project>
