<?xml version="1.0" encoding="UTF-8"?>

<menubar>
    <menu name="menu_file" extensionpoint="open">
		<menuitem action="NewMessage"/>	
	</menu>
	
	<menu name="menu_file" extensionpoint="top">
		<!--<menuitem action="SaveMessage"/>-->
		<menuitem action="SaveAsDraft"/>	
		<menuitem action="SaveAsTemplate"/>	
		<separator/>
		<menuitem action="Send"/>	
		<menuitem action="SendLater"/>		
	</menu>
	
	<menu name="menu_edit" extensionpoint="bottom">
		<menuitem action="ExternalEditor"/>	
		<separator/>
		<menuitem action="MailAccount"/>
		<extensionpoint name="top" />	
		<extensionpoint name="bottom" />
	</menu>
	
	<menu name="menu_view" extensionpoint="bottom">
		<menuitem imenu="CharacterEncodingMenu" />
		<extensionpoint name="top" />	
		<extensionpoint name="bottom" />
	</menu>
	
	<menu name="menu_format">
		<menuitem checkboxaction="EnableHtmlAction" />
		<menu name="menu_format_style">
			<menuitem checkboxaction="TeleTyperFormatAction" />
			<separator/>
			<menuitem checkboxaction="BoldFormatAction" />
			<menuitem checkboxaction="ItalicFormatAction" />
			<menuitem checkboxaction="UnderlineFormatAction" />
			<menuitem checkboxaction="StrikeoutFormatAction" />
		</menu>
		<separator/>
		<menuitem imenu="FontSizeMenu" />
		<separator />
		<menuitem imenu="ParagraphMenu" />
		<menu name="menu_format_justification">
			<menuitem checkboxaction="LeftJustifyAction" />
			<menuitem checkboxaction="CenterJustifyAction" />
			<menuitem checkboxaction="RightJustifyAction" />
		</menu>
		<separator />
		<menuitem action="InsertBreakAction" />
	</menu>
	
	<menu name="menu_message">
		<menuitem action="EditSignature"/>	 
		<menuitem action="AttachFile"/>	 
		<menuitem action="Spellcheck"/>	
		<separator />
		<menuitem checkboxaction="SignMessage"/>	
		<menuitem checkboxaction="EncryptMessage"/>
		<extensionpoint name="top" />	
		<extensionpoint name="bottom" />
	</menu>
	
</menubar>