 - 
 -->

<project name="test.carol.jdoc" default="dist">
  
  <property name="jdoc.name" value="test_carol"/>
  <property name="jdoc.dir" value="${test.dist.jdoc}/${jdoc.name}"/>
  
  <target name="dist">
    <uptodate property="jdoc.required" targetfile="${jdoc.dir}/index.html">
      <srcfiles dir="${test.src}" includes="**/jtests/**/*.java"/>
    </uptodate>
    <antcall target="dist.jdoc.${jdoc.name}"/>
  </target>
  
  <target name="dist.jdoc.test_carol" unless="jdoc.required">
    <mkdir dir="${test.dist.jdoc}/test_carol"/>
    <javadocMultipleLink packagenames="org.objectweb.carol.jtests.*"
				destdir="${test.dist.jdoc}/test_carol"
      windowtitle="Objectweb Common Architecture for RMI ObjectWeb Layer Tests"
      doctitle="Objectweb Common Architecture for RMI ObjectWeb Layer Tests"
      sourcepath="${test.src}" author="true" version="true"
      use="true"
      classpath="${test.classpath}"
      />
  </target>
</project>
