<project name="carol_archive_tests" default="test.dist.jar">
  <target name="test.dist.jar">
    <!-- CAROL JAR -->
    <jar jarfile="${test.dist.lib}/carol_test.jar">
      <fileset dir="${test.build}/classes">
        <include name="**/jtests/**/*.class"/>
        <include name="**/ant/*.class"/>
      </fileset>   

      <manifest>
        <attribute name="Manifest-Version" value="1.0"/>
        <attribute name="Specification-Title" value="CAROL_TEST"/>
        <attribute name="Specification-Version" value="1.0"/>
        <attribute name="Specification-Vendor" value="ObjectWeb"/>
        <attribute name="Implementation-Title" value="org.objectweb.carol.jtests"/>
        <attribute name="Implementation-Version" value="1.0"/>
        <attribute name="Implementation-Vendor" value="INRIA"/>
      </manifest>
    </jar>
  </target>
</project>
