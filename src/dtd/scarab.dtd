<!ELEMENT scarab (module+)>

<!ELEMENT module (name, code, issue+)>
<!ATTLIST module id CDATA #REQUIRED>
<!ATTLIST module parent CDATA #REQUIRED>

<!ELEMENT issue (artifact-type, committed-by, issue-attribute+, dependency*, attachment*, transaction?)>
<!ATTLIST issue id CDATA #REQUIRED>

<!ELEMENT issue-attribute (name, value, type)>

<!ELEMENT dependency (type, (child | parent))>

<!ELEMENT attachment (name, type, path?, data, mimetype, created-date, modified-date, created-by, modified-by)>

<!ELEMENT transaction (type, activity+)>
<!ATTLIST transaction id CDATA #REQUIRED>

<!ELEMENT activity (activity-attribute, description)>

<!ELEMENT activity-attribute (name, value, old-value, type)>

<!ELEMENT code (#PCDATA)>
<!ELEMENT artifact-type (#PCDATA)>
<!ELEMENT committed-by (#PCDATA)>
<!ELEMENT name (#PCDATA)>
<!ELEMENT value (#PCDATA)>
<!ELEMENT type (#PCDATA)>
<!ELEMENT old-value (#PCDATA)>
<!ELEMENT child (#PCDATA)>
<!ELEMENT parent (#PCDATA)>
<!ELEMENT path (#PCDATA)>
<!ELEMENT data (#PCDATA)>
<!ELEMENT mimetype (#PCDATA)>
<!ELEMENT modified-by (#PCDATA)>
<!ELEMENT modified-date (#PCDATA)>
<!ELEMENT created-by (#PCDATA)>
<!ELEMENT created-date (#PCDATA)>
<!ELEMENT description (#PCDATA)>
