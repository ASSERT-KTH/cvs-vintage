#set ($module = $scarabR.CurrentModule)
#if ($data.User.hasLoggedIn() && $module)
<div id="topmodule">
 <table border="0" cellspacing="0" cellpadding="3" width="100%">
  <tr>
   <td nowrap="nowrap">
    <div id="navsearch">

<form action="$link.setPage("IssueList.vm").setAction("Search")" method="get">
     #set ($issuetype = $scarabR.CurrentIssueType)
     #set ($privateQueries = $module.getPrivateQueries($data.User, $issuetype))
     #set ($globalQueries = $module.getGlobalQueries($issuetype))
     #if (($privateQueries && $privateQueries.size() > 0) || ($globalQueries && $globalQueries.size() > 0))
        <select name="queryId">
       #foreach ($query in $privateQueries)
        <option value="$query.QueryId">$query.Name</option>
       #end
       #foreach ($query in $globalQueries)
        <option value="$query.QueryId">$query.Name</option>
       #end
        </select>
        <input type="submit"  value="Go" class="bttn" name="eventSubmit_doRunstoredquery"/>&#160;
        <img src="$data.Request.ContextPath/images/seperator2.gif" width="2" height="15" alt="" border="0" />&#160;
     #end
        <input type="text" name="id" size="15" maxlength="255" tabindex="1"/>&#160;
        <input type="hidden" name="$scarabG.Constant.NEXT_TEMPLATE" value="ViewIssue.vm" />
        <input type="submit" value="Artifact Id" name="eventSubmit_doGonext" tabindex="2" />&#160;
        <img src="$data.Request.ContextPath/images/seperator2.gif" width="2" height="15" alt="" border="0" />&#160;
     <small>
      $link.setPage("AdvancedQuery.vm").setLabel("Advanced Query")&#160;|&#160;
      $link.setPage("Search.vm").setLabel("Custom Query")&#160;|&#160;
      $link.setPage("IssueList.vm").setLabel("Issue List")
     </small>
</form>

    </div>
   </td>
  </tr>
 </table>
</div>
#end
