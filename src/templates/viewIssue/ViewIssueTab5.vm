#if (!$allActivities.isEmpty())
<h3>$l10n.ChangeHistory</h3>
  <table width="100%" cellpadding="3" cellspacing="2" border="1">
  <tr>
    <th>$l10n.DateStamp</th>
    <th>$l10n.Action</th>
    <th>$l10n.Reason</th>
    <th>$l10n.By</th>
  </tr>
  #foreach ($act in $allActivities)
    #indexedRows($velocityCount)
     <td>
     #set ($activitySet = $act.ActivitySet)
     #if ($activitySet)
       $format.getDate($scarabR.DateFormat, $activitySet.CreatedDate)
     #end
     </td>
     <td>$act.Description</td>

     <td>
     #set ($activitySetAttachmentData = $activitySet.Attachment.Data)
     #if ($activitySet && $activitySet.Attachment)
       #if ($act.Depend && $activitySetAttachmentData)
         #if ($activitySetAttachmentData.toString().length() > 0)
           $activitySetAttachmentData
         #else
           $l10n.NotProvided
         #end
       #elseif ($activitySetAttachmentData && !$activitySet.Attachment.AttachmentType.Name.equals("COMMENT"))
         $activitySetAttachmentData
       #elseif ($activitySet.ActivitySetType.Name.equals("Edit Issue"))
         $act.NewValue
       #else
         $l10n.NotProvided
       #end
     #elseif ($act.Attachment)
       #if ($act.Attachment.Data && !$act.Attachment.AttachmentType.Name.equals("COMMENT"))
         $act.Attachment.Data 
       #else
         $l10n.NotProvided
       #end     
     #elseif ($activitySet && $activitySet.ActivitySetType.Name.equals("Create Issue"))
       $l10n.InitialEntry
     #else
       $l10n.NotProvided
     #end
     </td>
     <td>
     #set ($user = $scarabR.getUser($activitySet.CreatedBy))
     <a href="mailto:$user.Email">$!user.Name</a>
     </td>
    </tr>
  #end
 </table>

