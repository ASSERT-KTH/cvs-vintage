#if ($user.UserId)
<div class="functnbar2">
 <table cellpadding="4" cellspacing="0" border="1">
 <tr>
  <td class="firstchild">
  <div>General functions</div>
   <input type="submit" value="Save" name="eventSubmit_doSave" />&#160;
   <input type="submit" value="Cancel" name="eventSubmit_doCancel" />&#160;
   <input type="submit" value="New" name="eventSubmit_doNewquery" />
  </td>
  <td>
  <div>Select list item(s) to</div>
  <input type="submit" value="Copy" name="eventSubmit_doCopyquery" />&#160;
  #if ($scarabR.hasPermission($scarabG.Permission.ITEM__DELETE) || !$module.getPrivateQueries($user).isEmpty())
   <input type="submit" value="Delete" name="eventSubmit_doDeletequeries" />&#160;
  #end
  <input type="submit" value="Subscribe" name="eventSubmit_doSubscribe" />&#160;
  <input type="submit" value="Unsubscribe" name="eventSubmit_doUnsubscribe" />
  </td>
 </tr>
 </table>
</div>
#end
</form>
#end
</div>
