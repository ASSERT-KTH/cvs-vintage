<div class="app" id="loginDONOTCHANGETHISID">

<h2>$page.Title</h2>

<p>New users,
  <a href="$link.setPage("Register.vm")"><strong>register here</strong></a>.</p>
<p>Forgot your password,
  <a href="$link.setPage("ForgotPassword.vm")"><strong>click here</strong></a>.</p>

<h3>Login</h3>

#set ($nextTemplate = $data.Parameters.getString($scarabG.Constant.NEXT_TEMPLATE, ""))

<form action="$link.setPage("Login.vm")" method="post" name="login">
  <input type="hidden" name="action" value="Login" />  
#if ($nextTemplate && $nextTemplate.trim().length() > 0)
  #if ($nextTemplate.equals("Login.vm"))
    #set ($nextTemplate = "SelectModule.vm")
  #end
 <input type="hidden" name="$scarabG.Constant.NEXT_TEMPLATE" value="$nextTemplate" />
#else
 <input type="hidden" name="$scarabG.Constant.NEXT_TEMPLATE" value="SelectModule.vm" />
#end

#set ($loginGroup = $intake.Login.Default)
<div class="axial">
<table cellpadding="3" cellspacing="2" border="0">
 <tr>
  <th>Email address</th>
  <td>
  <input name="$loginGroup.Username.Key" value="$!loginGroup.Username.Value" size="25" type="text" />
  #fieldErrorMsg ($loginGroup.Username "")
  </td>
 </tr>
 <tr>
  <th>Password</th>
  <td>
  <input name="$loginGroup.Password.Key" value="" size="25" type="password" />
  #fieldErrorMsg ($loginGroup.Password "")
  </td>
 </tr>
</table>
</div>

<div class="functnbar2">
<input type="submit" name="eventSubmit_doLogin" value="Login" />
</div>

$intake.declareGroups()

<script>
<!--
document.login.${loginGroup.Username.Key}.focus();
// -->
</script>
</form>
</div>
