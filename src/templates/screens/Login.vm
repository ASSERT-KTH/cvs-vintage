$page.setTitle("Welcome to Scarab") 

<div id="login" class="app">

 <h3>$page.Title</h3>

 <ul>
  <li>New users, <a href="$link.setPage("Register.vm")">register here</a>.</li>
 </ul>

<form action="$link.setPage("Login.vm")" method="post" name="login">
  <input type="hidden" name="action" value="Login" /> 
#if ($nextTemplate && $nextTemplate.length() > 0)
<input type="hidden" name="$scarabG.Constant.NEXT_TEMPLATE" value="$nextTemplate" /> 
#else 
<input type="hidden" name="$scarabG.Constant.NEXT_TEMPLATE" value="Links.vm" /> 
<input type="hidden" name="id" value="1" /> 
#end 

#set ( $loginGroup = $intake.Login.Default )

<div class="axial">
<table cellpadding="3" cellspacing="2" border="1">
<tr><th>Email Address:</th>
<td>
<input name="$loginGroup.Username.Key" value="$!loginGroup.Username.Value" size="25" type="text" />
#fieldErrorMsg ($loginGroup.Username "")
</td>
</tr>

<tr><th>Password:</th>
<td>
<input name="$loginGroup.Password.Key" value="" size="25" type="password" />
#fieldErrorMsg ($loginGroup.Password "")
</td>
</tr>

<tr>
<td colspan="2"><input type="submit" name="eventSubmit_doLogin" value="Login" /></td>
</tr>
</table>
</div>

$intake.declareGroups()
 </form>

</div>
