$page.setTitle("Attribute show")

<div id="globalattributeshow" class="app">
<h2>$page.Title</h2>
<p>
This page is for selecting an Attribute to edit which is defined in a global scale.
</p>

<form action="$link.setPage("admin,GlobalAttributeShow.vm")" method="get">
<input type="hidden" name="action" value="admin.GlobalAttributes" />
<input type="hidden" name="$scarabG.Constant.NEXT_TEMPLATE" value="admin,AdminIndex.vm" />


<div class="functnbar">
<input type="submit" value="Done" eventSubmit_doAlldone" />&#160;<input type="submit" value="Cancel" eventSubmit_doCancel" />&#160;
</div>       

<h3>Attributes</h3>

<table width="100%" border="1" cellspacing="2" cellpadding="3">
<tr>
<th>deleted</th>
<th>input type</th>
<th>attribute name</th>
<th>description</th>
<th>author</th>
<th>Creation Date</th>
</tr>
#set ($allAttributes = $scarabG.AllAttributes)
#foreach( $attribute in $allAttributes )
#set ($attgroup = $intake.Attribute.mapTo($attribute))
#indexedRows($velocityCount)
<td>#booleanCheckbox ($attgroup.Deleted)</td>
<td>
    #set ($attType = $attribute.AttributeType)
    #foreach ( $atype in $attribute.AllAttributeTypes )
      #if($attType.AttributeTypeId == $atype.AttributeTypeId)
        $atype.Name
      #end
    #end
</td>
<td><a href="$link.setPage("admin,GlobalAttributeShow.vm").setAction("admin.GlobalAttributes").addPathInfo("$scarabG.Constant.NEXT_TEMPLATE","admin,GlobalAttributeEdit.vm").addPathInfo("eventSubmit_doSelectattribute", "foo").addPathInfo("intake-grp", "att").addPathInfo("att", "_0").addPathInfo("att_0id", "$attgroup.Id")">$attribute.Name</a></td>
<td>#if ($attribute.Description) $attribute.Description #else &nbsp; #end</td>
#set ($createdUser = $scarabR.getUser($attribute.CreatedBy) )
<td><a href="mailTo:$createdUser.Email">$createdUser.FirstName $createdUser.LastName</a></td>
<td>$format.getDate($scarabR.DateFormat, $attribute.CreatedDate)</td>
</tr>
#end
</table>

$intake.declareGroups()

<div class="functnbar3">
<input type="submit" value="create new"  name="eventSubmit_doCreatenew" />&#160;<input type="submit" value="copy selected" />&#160;<input type="submit" value="delete selected"  name="eventSubmit_doDeleteselectedattributes" />&#160;<small>attribute</small>&#160;
</div>

<div class="functnbar2">
<input type="submit" value="Done" eventSubmit_doAlldone" />&#160;<input type="submit" value="Cancel" eventSubmit_doCancel" />&#160;
</div>       

</form>
</div>
