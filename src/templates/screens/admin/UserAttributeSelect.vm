$page.setTitle("Select user attribute")
#set ($canEditDomain=$scarabR.hasPermission($scarabG.Permission.DOMAIN__EDIT))

#macro (AttributeSelectBar $val)
<div class="functnbar$val">
#if ($attributes.size() > 0)
   <input type="submit" value="Add selected to module" name="eventSubmit_doSelectuserattribute" />
#end
#if ($canEditDomain)
    <input type="submit" value="Create new" name="eventSubmit_doCreatenewuserattribute"/>&#160;
#end
<input type="submit" value="Cancel" name="eventSubmit_doCancel" />
</div>
#end

<div class="app" id="globalAttributeSelect">
<h2>$page.Title</h2>

#set ($issueType = $scarabR.IssueType)
#set ($attributes = $scarabR.CurrentModule.getAvailableAttributes($issueType, "user"))
#set ($attGroup = $intake.Attribute.Default)

<form action="$link.setPage("admin,UserAttributeSelect.vm")" method="get">
<input type="hidden" name="action" value="admin.ArtifactTypeEdit" />
<input type="hidden" name="groupId" value="$data.Parameters.getString("groupId","").trim()" />
<input type="hidden" name="issueTypeId" value="$data.Parameters.getString("issueTypeId","").trim()" />
<input type="hidden" name="$scarabG.Constant.OTHER_TEMPLATE" value="admin,UserAttributeEdit.vm" />


#AttributeSelectBar("")

#if ($attributes.size() == 0)

<p><strong class="alert">There are no user attributes that are not already associated with this module.</strong></p>

#else

<h3>Global attributes</h3>

<table width="100%" border="1" cellspacing="2" cellpadding="3">
<tr>
<th nowrap="nowrap"></th>
<th>Attribute name</th>
<th>Description</th>
<th>Input type</th>
<th>Author</th>
<th>Creation date</th>
</tr>

#foreach ($attribute in $attributes)
 #indexedRows($velocityCount)
  <td><input type="radio" name="$attGroup.Id.Key" value="$attribute.AttributeId" /></td>
  <td>$attribute.Name</td>
  <td>$attribute.Description</td>
  <td>$attribute.AttributeType.Name</td>
  #set ($createdUser = $scarabR.getUser($attribute.CreatedBy))
  <td><a href="mailTo:$createdUser.Email">$createdUser.FirstName $createdUser.LastName</a></td>
  <td>$format.getDate($scarabR.DateFormat, $attribute.CreatedDate)</td>
 </tr>
#end
</table>

#end

#AttributeSelectBar("2")
$intake.declareGroups()
</form>

</div>
