    <p class="alert">$l10n.NoAttributeGroups</p>
    <div class="functnbar3">
    <input type="submit" value="$l10n.AddNew"  name="eventSubmit_doCreatenewgroup" />&#160;
    </div>
#else
<table width="100%" border="1" cellspacing="2" cellpadding="3">
