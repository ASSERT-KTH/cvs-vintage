#set ( $report = $scarabR.Report )

<div class="app" id="div2-4-1-b-output">

<h2>$report.Name</h2>
	
<div>
	<strong>Project:</strong> $report.Module.Name
</div>
<div>
	<strong>Date Generated:</strong> $format.getNow("MM/dd/yyyy hh:mm a")
</div>
<div>
	<strong>Generated by:</strong> $report.GeneratedBy.UserName
</div>

#if ($report.Description)
    <p>$report.Description</p>
#end
		
<table width="100%" border="1" cellspacing="2" cellpadding="3">
	<tr>
		<th>&nbsp;</th>

#foreach ($date in $report.ReportDates)
		<th>date $format.getDate("MM/dd/yyyy HH:mm", $date.Date)</th>
#end
	</tr>
		

#foreach ( $option1 in $report.SelectedAxis1Options )
    #rows()
		<td><strong>$option1.DisplayValue</strong></td>
    #foreach ($date in $report.ReportDates)
    		<td>
                $report.getIssueCount($option1.AttributeOption, $date.Date )
            </td>
    #end
    </tr>
#end

</table>
		
<p>page 1 of 1</p>

#set ( $action = $link.setPage("Links.vm").setAction("GenerateReport") )
<form method="get" action="$action">

<p class="functnbar">
    <input type="submit" value="save this report" 
        name="eventSubmit_doSavereport" />&nbsp;
    <input type="submit" value="print" name="eventSubmit_doPrint" />&nbsp;
    <input type="submit" value="done" name="eventSubmit_doCancel" />
</p>

#addReportHiddenInputs($report "reports,Report_2.vm")
$intake.declareGroups()
</form>

</div>


