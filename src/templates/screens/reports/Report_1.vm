#set ($report = $scarabR.Report)

<div class="app" id="div2-4-1-a-output">

<form method="get" action="$link.setPage("reports,Step1.vm")">
<input type="hidden" name="action" value="GenerateReport" />

<h3>
#if ($report.Name)
$report.Name
#else
$l10n.Report
#end
</h3>

<div>
 <strong>$l10n.Module$l10n.Colon</strong> $report.Module.Name
</div>
<div>
 <strong>$l10n.DateGenerated</strong> $format.getNow("MM/dd/yyyy hh:mm a")
</div>
<div>
 <strong>$l10n.GeneratedBy</strong> $!report.GeneratedBy.Name
</div>

#if ($report.Description)
<div>
 <strong>$l10n.Description$l10n.Colon</strong> $report.Description
</div>
#end

#if ($report.Type == 0)
<div>
 <strong>$l10n.ReportDate</strong> $report.GeneratedDate
</div>
#end

<p>
#set ($reportModel = $report.Model)
#set ($reportIssueType = $report.IssueType)
#reportTable($reportModel $reportIssueType)
</p>

<div class="functnbar2">
  <input type="submit" value="$l10n.Save" name="eventSubmit_doSavereport" />
</div>

$intake.declareGroups()
</form>
</div>
