<h3>Templates</h3>

#if ($allTemplates.size() < 1)
    <p><strong class="alert">
    There are no stored templates, click the Create new button to create
    a new template.
    </strong></p>
#else
  
<table width="100%" border="1" cellspacing="2" cellpadding="3">
  <tr>
  <th nowrap="nowrap">Select</th>
  <th>#sort ("name" "Name")
  <th>#sort ("desc" "Description")</th>
  <th>#sort ("avail" "Availability")</th>
  <th>#sort ("user" "Author")</th>
  </tr>

#set ($permItemDelete = $scarabR.hasPermission($scarabG.Permission.ITEM__DELETE, $module))
#foreach ($template in $allTemplates)
#indexedRows($velocityCount)
#set ($isCreatedBy = $template.isCreatingUser($user))
#if ($permItemDelete || $isCreatedBy)
  <td><input type="checkbox" name="delete_$template.IssueId" /></td>
#else
  <td>&#160;</td>
#end
  <td>
    #if ($permItemDelete || $isCreatedBy)
      <a href="$link.setPathInfo("templateId", $template.IssueId.toString()).setPage("SaveTemplate.vm")">
      $template.TemplateInfo.Name</a>
    #else
      $template.TemplateInfo.Name
    #end
  </td>
  <td>
    #if($template.TemplateInfo.Description)
      $template.TemplateInfo.Description 
    #else
      &#160; 
    #end
  </td>
  <td>$template.templateInfo.Scope.Name
     #if (!$template.TemplateInfo.Approved)
       (until approved)
     #end
  </td>
   <td>
   #set ($createdUser = $template.CreatedBy)
   #if ($createdUser)
     <a href="mailTo:$createdUser.Email">$!createdUser.Name</a>
   #else
     &#160;
   #end
   </td>
  </tr>
#end

  </table>

#end

<div class="functnbar3">
  <input type="submit" value="Create new" name="eventSubmit_doGotoothertemplate" />
  #if ($permItemDelete)
    &#160;<input type="submit" value="Delete selected" name="eventSubmit_doDeletetemplates" />
  #end
</div>

</form>
</div>
