   #set ($nextTemplate = "entry,Wizard1.vm")
#end
     <div class="app" id="divselect_module">
        <h3>Artifact types: The '$scarabR.CurrentModule.Name' module</h3>
        
        <table width="100%" border="1" cellspacing="2" cellpadding="3">
        <tr>
          <th>Artifact type name</th>
          <th>Artifact type description</th>
        </tr>

#foreach ($issueType in $scarabR.CurrentModule.IssueTypes)
        #indexedRows($velocityCount)
        <td><a href="$link.setPage("SelectArtifactType.vm").setAction("SelectIssueType").addPathInfo($scarabG.Constant.NEXT_TEMPLATE, "$nextTemplate").addPathInfo("newissuetype", "$issueType.IssueTypeId")">$issueType.Name</a></td>
