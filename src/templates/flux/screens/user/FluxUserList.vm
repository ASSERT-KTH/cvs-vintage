*#

$page.setTitle("User Administration")
$page.setBgColor($ui.bgcolor)

#set ( $headings = ["Username","Password","First Name", "Last Name", "Email"] )

<table>

  #if ($showFinder)
  <tr>
    <td align="left">
      <table >
        <tr>
        <form action="$link.setPage("user,FluxUserList.vm")">
          <td align="left">
            #listBox ($flux.FieldList)
          </td>
          <td align="right">
            #textField("searchField" "*" "20")
          </td>
          <td>
            <font face="$ui.sansSerifFonts">
              <input type="submit" name="eventSubmit_doFind" value="Find"/>
            </font>
          </td>
        </form>
        </tr>
      </table>
    </td>
  </tr>
  #end

  <tr>
    <td>
      <table cellspacing="$ui.tableCellSpacing" cellpadding="$ui.tableCellPadding">
        <tr>
          #foreach ($heading in $headings)
          #headerCell ($heading)
          #end
        </tr>

        #foreach ($user in $flux.Users)
        <tr>
          #entryCell ($!user.UserName)
          #entryCell ($!user.Password)
          #entryCell ($!user.FirstName)
          #entryCell ($!user.LastName)
          #entryCell ("<a href=mailto:$!user.Email>$!user.Email</a>")
          <td>
            <font face="$ui.sansSerifFonts">
              $link.setPage("user,FluxUserForm.vm").addPathInfo("username",$user.UserName).addQueryData("mode","modify").setLabel("Details") &nbsp;
              $link.setPage("user,FluxUserRoleForm.vm").addPathInfo("username",$user.UserName).addQueryData("mode","modify").setLabel("Roles") &nbsp;
              $link.setPage("user,FluxUserForm.vm").addPathInfo("username",$user.UserName).addQueryData("mode","delete").setLabel("Remove")
            </font>
          </td>
        </tr>
        #end
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <font face="$ui.sansSerifFonts">
        $link.setPage("user,FluxUserForm.vm").addQueryData("mode","insert").setLabel("Add User")
      </font>
    <td>
  </tr>
</table>

#if ($showEmbeddedMenu)
  <hr size="1" noshade>
  #parse ("screens/FluxEmbeddedMenu.vm")
#end
