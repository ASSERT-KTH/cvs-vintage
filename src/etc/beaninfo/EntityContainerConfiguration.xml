<bean 
  class="org.jboss.ejb.deployment.EntityContainerConfiguration"
  displayname="Entity container configuration"
  iconcolor16="/images/config.gif">
  
  <property 
    name="Name" class="java.lang.String" 
    displayname="Configuration name"/>
    
  <property 
    name="CallLogging" class="boolean" 
    displayname="Log bean calls" propertyeditor="com.dreambean.awt.editors.BooleanEditor"/>
    
  <property 
    name="CommitOption" class="java.lang.String" 
    displayname="Commit option" propertyeditor="org.jboss.ejb.deployment.editors.CommitOptionEditor"/>
	 
  <property 
    name="ContainerInvoker" class="java.lang.String" 
    displayname="Container invoker" propertyeditor="org.jboss.ejb.deployment.editors.ContainerInvokerTypeEditor"/>
    
  <property 
    name="InstanceCache" class="java.lang.String" 
    displayname="Instance cache" propertyeditor="org.jboss.ejb.deployment.editors.EntityInstanceCacheTypeEditor"/>

  <property 
    name="InstancePool" class="java.lang.String" 
    displayname="Instance pool" propertyeditor="org.jboss.ejb.deployment.editors.EntityInstancePoolTypeEditor"/>

  <property 
    name="PersistenceManager" class="java.lang.String" 
    displayname="Persistence manager" propertyeditor="org.jboss.ejb.deployment.editors.EntityPersistenceManagerTypeEditor"/>

  <property 
    name="AuthenticationModule" class="java.lang.String" 
    displayname="Authentication Module JNDI Name"/>

  <property 
    name="RealmManager" class="java.lang.String" 
    displayname="Realm Manager JNDI Name"/>

  <method name="removeConfiguration" displayname="Remove"/>
</bean>
