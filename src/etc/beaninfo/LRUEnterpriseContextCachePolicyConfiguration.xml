<bean
  class="org.jboss.ejb.deployment.LRUEnterpriseContextCachePolicyConfiguration"
  displayname="LRU cache policy settings"
  iconcolor16="/images/editor.gif"
  stopclass="org.jboss.ejb.deployment.CachePolicySupportConfiguration">

  <property
    name="MinimumCapacity" class="int"
    displayname="Minimum capacity"/>

  <property
    name="MaximumCapacity" class="int"
    displayname="Maximum capacity"/>

  <property
    name="ResizerPeriod" class="int"
    displayname="Resizer period (seconds)"/>

  <property
    name="OveragerPeriod" class="int"
    displayname="Overager period (seconds)"/>

  <property
    name="MaxBeanAge" class="int"
    displayname="Max bean age before passivation (seconds)"/>

  <property
    name="MinCacheMissPeriod" class="int"
    displayname="Min cache miss period (seconds)"/>

  <property
    name="MaxCacheMissPeriod" class="int"
    displayname="Max cache miss period (seconds)"/>

  <property
    name="CacheLoadFactor" class="double"
    displayname="Cache load factor"/>

</bean>

