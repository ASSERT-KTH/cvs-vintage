<?xml version="1.0" encoding="UTF-8"?>

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  UUID Key Generator Factory Service Configuration                     -->
<!--                                                                       -->
<!-- ===================================================================== -->
<server>
  <!--
     | Specify required libraries here.
  -->
  <classpath codebase="lib" archives="jboss.jar,keygenerators.jar"/>

  <!--
     | UUIDKeyGeneratorFactoryService
  -->
  <mbean code="org.jboss.ejb.plugins.keygenerator.uuid.UUIDKeyGeneratorFactory"
         name="jboss:service=KeyGeneratorFactory,type=UUID">

      <attribute name="FactoryName">UUIDKeyGeneratorFactory</attribute>
  </mbean>
</server>
