<?xml version="1.0" encoding="ISO-8859-1" ?>

<configuration>
  
  <!-- These are searched in order, first property found is first in list   -->
  <!-- We need the Torque.properties here too, because TorqueComponent will -->
  <!-- be initialized with the Runtime property environment of Turbine      -->
  
  <jndi className="org.apache.commons.configuration.JNDIConfiguration" prefix="java:comp/env"/>
  <properties className="org.apache.commons.configuration.PropertiesConfiguration" fileName="WEB-INF/conf/custom.properties"/>
  <properties className="org.apache.commons.configuration.PropertiesConfiguration" fileName="WEB-INF/conf/defaultCustom.properties"/>
  <properties className="org.apache.commons.configuration.PropertiesConfiguration" fileName="WEB-INF/conf/Scarab.properties"/>
  <properties className="org.apache.commons.configuration.PropertiesConfiguration" fileName="WEB-INF/conf/PermissionMapping.properties"/>
  <properties className="org.apache.commons.configuration.PropertiesConfiguration" fileName="WEB-INF/conf/TurbineResources.properties"/>
  <properties className="org.apache.commons.configuration.PropertiesConfiguration" fileName="WEB-INF/conf/Torque.properties"/>

</configuration>
