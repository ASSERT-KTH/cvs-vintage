<?xml version="1.0" encoding="ISO-8859-1" standalone="no" ?>

<!--
<!DOCTYPE input-data SYSTEM
          "http://jakarta.apache.org/turbine/dtd/intake.dtd">
-->


<!-- ==================================================================== -->
<!--                                                                      -->
<!--                P R O J E C T  I N P U T S                            -->
<!--                                                                      -->
<!-- ==================================================================== -->

<input-data basePackage="org.tigris.scarab.">
<group name="Attribute" key="att" mapToObject="om.Attribute">
        <field name="Id" key="id" type="NumberKey" mapToProperty="PrimaryKey">
           <rule name="mask" value="[0-9]+">Invalid Id</rule>
           <required-message>No attribute was selected.</required-message>
        </field>
        <field name="TypeId" key="typeid" type="NumberKey">
            <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="Name" key="name" type="String">
            <rule name="minLength" value="1">Attribute name is not allowed to be empty</rule>
            <rule name="maxLength" value="255">Attribute name must be less than 255 characters long</rule>
        </field>
        <field name="Description" key="desc" type="String"> 
            <rule name="minLength" value="1">Attribute description is not allowed to be empty</rule>
            <rule name="maxLength" value="255">Attribute description must be less than 255 characters long</rule>
        </field>
        <field name="Deleted" key="del" type="boolean" />
</group>

<group name="AttributeOption" key="atto" mapToObject="om.AttributeOption">
        <field name="OptionId" key="aoid" type="NumberKey" mapToProperty="PrimaryKey">
           <rule name="mask" value="[0-9]+">Invalid Id</rule>
           <required-message>No Attribute Option was selected.</required-message>
        </field>
        <field name="AttributeId" key="attid" type="NumberKey">
           <rule name="mask" value="[0-9]+">Please select a valid choice</rule>
        </field>
<!--        
        <field name="ParentIds" key="parentid" type="String">
           <rule name="mask" value="[0-9|,]+">Invalid Option Id(s)</rule>
        </field>
-->
        <field name="Name" key="name" type="String">
            <rule name="minLength" value="1">Option name is not allowed to be empty</rule>
            <rule name="maxLength" value="255">Option name must be less than 255 characters long</rule>
        </field>
        <field name="NewName" key="newname" type="String"
               mapToProperty="Name">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Deleted" key="del" type="boolean"/>
</group>

<!-- Combination of AttributeOption and ROptionOption primarily for the GlobalAttributeEdit.vm page -->
<group name="ParentChildAttributeOption" key="pcao" mapToObject="om.ParentChildAttributeOption">
        <field name="OptionId" key="oid" type="NumberKey">
           <rule name="mask" value="[0-9]+">Invalid Id</rule>
           <required-message>No Attribute Option was selected.</required-message>
        </field>
        <field name="AttributeId" key="attid" type="NumberKey">
           <rule name="mask" value="[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="ParentId" key="parentid" type="NumberKey">
           <rule name="mask" value="[0-9|,]+">Invalid Option Id</rule>
        </field>
        <field name="Name" key="name" type="String">
            <rule name="minLength" value="1">Option name is not allowed to be empty</rule>
            <rule name="maxLength" value="255">Option name must be less than 255 characters long</rule>
        </field>
        <field name="PreferredOrder" key="order" type="int">
           <rule name="mask" value="[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="Weight" key="weight" type="int">
           <rule name="mask" value="[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="NewName" key="newname" type="String"
               mapToProperty="Name">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Deleted" key="del" type="boolean"/>
</group>

<group name="IssueType" key="itype" mapToObject="om.IssueType">
        <field name="IssueTypeId" key="itypeid" type="NumberKey">
           <rule name="mask" value="^$|[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="Name" key="name" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Description" key="desc" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Template" key="tem" type="boolean" mapToProperty=""/>
        <field name="Deleted" key="del" type="boolean"/>
</group>

<group name="AttributeType" key="attt" mapToObject="om.AttributeType">
        <field name="AttributeTypeId" key="atttid" type="NumberKey">
           <rule name="mask" value="^$|[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="Name" key="name" type="String">
            <rule name="maxLength" value="255"/>
        </field>
</group>

<group name="AttributeGroup" key="attg" mapToObject="om.AttributeGroup">
        <field name="AttributeGroupId" key="attgid" type="NumberKey">
           <rule name="mask" value="^$|[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="Name" key="name" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Description" key="desc" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Active" key="act" type="boolean"/>
        <!--<field name="Dedupe" key="ded" type="boolean"/>-->
        <field name="Order" key="order" type="int" mapToProperty="Order">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
</group>

<group name="RAttributeAttributeGroup" key="raag" mapToObject="om.RAttributeAttributeGroup">
        <field name="Order" key="order" type="int" mapToProperty="Order">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
</group>

<group name="RModuleAttribute" key="rma" mapToObject="om.RModuleAttribute">
        <field name="AttributeId" key="attid" type="NumberKey">
           <rule name="mask" value="^$|[0-9]+">Please select a valid choice</rule>
        </field>
        <field name="DisplayValue" key="name" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Active" key="active" type="boolean"/>
        <field name="Required" key="req" type="boolean"/>
        <field name="Dedupe" key="dedupe" type="boolean"/>
        <field name="QuickSearch" key="qs" type="boolean"/>
<!--
        <field name="Order" key="order" type="int" 
                mapToProperty="PreferredOrder">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
-->
</group>

<group name="RModuleOption" key="rmo" mapToObject="om.RModuleOption">
        <field name="DisplayValue" key="name" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="Active" key="active" type="boolean"/>
        <field name="Order" key="order" type="int" 
                mapToProperty="Order">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
        <field name="Weight" key="weight" type="int" 
                mapToProperty="Weight">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
</group>

<group name="RModuleIssueType" key="rmit" mapToObject="om.RModuleIssueType">
        <field name="Display" key="dis" type="boolean"/>
        <field name="Active" key="act" type="boolean"/>
        <field name="Order" key="order" type="int" 
                mapToProperty="Order">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
        <field name="History" key="hist" type="int" >
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
        <field name="Comments" key="com" type="int" >
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
        <field name="DisplayName" key="name" type="String">
        <rule name="maxLength" value="255">Please keep the display name to less than 256 characters</rule>
        </field>
        <field name="DisplayDesc" key="desc" type="String" mapToProperty="DisplayDescription">
        <rule name="maxLength" value="255">Please keep the display description to less than 256 characters</rule>
        </field>
</group>

<group name="RModuleUserAttribute" key="rmua" mapToObject="om.RModuleUserAttribute">
        <field name="Order" key="order" type="int" >
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
</group>

<group name="AttributeValue" key="attv" 
            mapToObject="om.AttributeValue">
        <field name="Id" key="id" type="NumberKey" mapToProperty="PrimaryKey">
           <rule name="mask" value="([0-9]|:)+">badIdMessage</rule>
        </field>
        <field name="AttributeId" key="attid" type="NumberKey"/>
        <field name="OptionId" key="optionid" type="NumberKey">
           <rule name="mask" value="[0-9]+">Please select a valid choice</rule>
           <required-message>This module requires that you select an option for this attribute.</required-message>
        </field>
        <field name="UserId" key="visid" type="NumberKey">
           <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="UserIds" key="visids" type="NumberKey" multiValued="true"/>
        <field name="Value" key="val" type="String">
            <rule name="maxLength" value="255">Value length cannot be &gt; 255</rule>
           <required-message>This module requires data for this attribute.</required-message>
        </field>
        <field name="Url" key="url" type="String" mapToProperty="Value">
            <rule name="maxLength" value="255">Url length cannot be &gt; 255</rule>
            <rule name="mask" value="^$|http.+">Please enter an url starting with "http"</rule>
           <required-message>This module requires a valid url.</required-message>
        </field>
        <field name="Deleted" key="del" type="boolean" />
<!--
        <field name="Order" key="order" type="int" 
               mapToProperty="NumericValue">
           <rule name="maxValue" value="99">Please enter a value less than 99</rule>
           <rule name="minValue" value="1">Please enter a value greater than 0</rule>
        </field>
-->
</group>

<group name="Issue" key="issue" mapToObject="om.Issue">
        <field name="Id" key="id" type="String" mapToProperty="UniqueId">
        </field>
        <field name="Ids" key="ids" type="NumberKey" 
               mapToProperty="" multiValued="true">
           <rule name="mask" value="[0-9]+">badIdsMessage</rule>
        </field>
        <field name="ModuleId" key="modid" type="NumberKey">
            <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="TypeId" key="iti" type="NumberKey" >
            <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="FederatedId" key="fid" type="String"/> 
        <field name="Deleted" key="del" type="boolean" />
</group>

<group name="SearchIssue" key="search" mapToObject="util.word.IssueSearch">
        <field name="SearchWords" key="sw" type="String"/>
        <field name="TextScope" key="ts" type="NumberKey" multiValued="true"/>
        <field name="MinId" key="lid" type="String"/>
        <field name="MaxId" key="hid" type="String"/>
        <field name="MinDate" key="ld" type="String">
            <rule name="mask" 
                value="[0-1]?[0-9]/[0-3]?[0-9]/[1-2]?[0-9]?[0-9][0-9]( [0-2]?[0-9]:[0-5][0-9])?">Invalid From Date</rule>
        </field>
        <field name="MaxDate" key="hd" type="String">
            <rule name="mask" 
                value="[0-1]?[0-9]/[0-3]?[0-9]/[1-2]?[0-9]?[0-9][0-9]( [0-2]?[0-9]:[0-5][0-9])?">Invalid To Date</rule>
        </field>
        <field name="CreatedByUserNames" key="cb" type="String" multiValued="true"/>
        <field name="StateChangeAttributeId" key="scai" type="NumberKey"/>
        <field name="StateChangeFromOptionId" key="scfoi" type="NumberKey"/>
        <field name="StateChangeToOptionId" key="sctoi" type="NumberKey"/>
        <field name="StateChangeFromDate" key="scfd" type="String">
            <rule name="mask" 
                value="[0-1]?[0-9]/[0-3]?[0-9]/[1-2]?[0-9]?[0-9][0-9]( [0-2]?[0-9]:[0-5][0-9])?">Invalid From Date</rule>
        </field>
        <field name="StateChangeToDate" key="sctd" type="String">
            <rule name="mask" 
                value="[0-1]?[0-9]/[0-3]?[0-9]/[1-2]?[0-9]?[0-9][0-9]( [0-2]?[0-9]:[0-5][0-9])?">Invalid To Date</rule>
        </field>
        <field name="InitialSortAttributeId" key="isai" type="NumberKey"/>
        <field name="InitialSortPolarity" key="isp" type="String"/>
        <field name="ResultsPerPage" key="rpp" type="int"/>
</group>

<group name="Module" key="mod" mapToObject="om.ScarabModule">
        <field name="Id" key="o" type="NumberKey" mapToProperty="PrimaryKey">
           <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <!-- this is not Name because Name is the Group Name, 
             not the Module Name -->
        <field name="RealName" key="name" type="String">
            <rule name="maxLength" value="255"/>
            <rule name="required" value="true">Name may not be blank</rule>
        </field>
        <field name="Description" key="desc" type="String">
            <rule name="maxLength" value="1024"/>
        </field>
        <field name="Code" key="code" type="String">
            <rule name="maxLength" value="4"/>
        </field>
        <field name="Url" key="url" type="String">
            <rule name="maxLength" value="255"/>
        </field>
        <field name="ParentId" key="parentid" type="NumberKey">
           <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="OwnerId" key="ownerid" type="NumberKey">
           <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="Deleted" key="del" type="boolean" />
        <field name="Dedupe" key="ded" type="boolean" />
</group>

<group name="Login" key="login">
    <field name="Username" key="u" type="String">
        <rule name="required" value="true">Please enter an email address</rule>
        <rule name="mask" value=".+@.+\..+">Please enter a valid email address</rule>
    </field>
    <field name="Password" key="p" type="String">
        <rule name="required" value="true">Please enter a password</rule>
    </field>
</group>

<group name="ForgotPassword" key="fgtpwd">
    <field name="Username" key="u" type="String">
        <rule name="required" value="true">Please enter an email address</rule>
        <rule name="mask" value=".+@.+\..+">Please enter a valid email address</rule>
    </field>
</group>

<group name="EditPermission" key="editpermission">
    <field name="PermissionName" key="r" type="String">
        <rule name="required" value="true">Please enter a name for the permission</rule>
    </field>
</group>

<group name="EditRole" key="editrole">
    <field name="RoleName" key="r" type="String">
        <rule name="required" value="true">Please enter a name for the role</rule>
    </field>
</group>

<group name="XMLExportSelect" key="xmlexportselect">
    <field name="FederatedIds" key="fids" type="String">
        <rule name="required" value="true">Please enter an issue, or a range of issues.</rule>
    </field>
</group>

<group name="Register" key="register" mapToObject="om.ScarabUserImpl">
    <field name="FirstName" key="fn" type="String">
        <rule name="required" value="true">Please enter a first name</rule>
    </field>
    <field name="LastName" key="ln" type="String">
        <rule name="required" value="true">Please enter a last name</rule>
    </field>
    <field name="Email" key="e" type="String">
        <rule name="required" value="true">Please enter an email address</rule>
        <rule name="mask" value=".+@.+\..+">Please enter a valid email address</rule>
        <rule name="maxLength" value="99">Your email address must be 99 characters or less in length</rule>
    </field>
    <field name="UserName" key="u" type="String" mapToProperty="Email">
        <rule name="required" value="true">Please enter an email address</rule>
        <rule name="mask" value=".+@.+\..+">Please enter a valid email address</rule>
    </field>
    <field name="OldPassword" key="op" type="String" mapToProperty="">
        <rule name="required" value="true">Please enter a password</rule>
    </field>
    <field name="Password" key="p" type="String">
        <rule name="required" value="true">Please enter a password</rule>
    </field>
    <field name="PasswordConfirm" key="pc" type="String" mapToProperty="">
        <rule name="required" value="true">Please enter a confirmation password</rule>
    </field>
    <field name="Confirm" key="c" type="String" mapToProperty="">
        <rule name="required" value="true">Please enter a valid confirmation code</rule>
    </field>
</group>

<group name="Attachment" key="atch" mapToObject="om.Attachment">
        <field name="Id" key="o" type="NumberKey" mapToProperty="PrimaryKey">
           <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
    <field name="Name" key="n" type="String">
        <rule name="maxLength" value="255">Please keep the description to less than 256 characters</rule>
    </field>
    <field name="DataAsString" key="das" type="String">
        <rule name="maxLength" value="8388607">Please keep the description to less than 8MB</rule>
        <required-message>Please enter a short comment</required-message>
    </field>
    <field name="File" key="d" type="FileItem">
        <rule name="maxLength" value="16777215">Files larger than 16MB are not allowed</rule>
    </field>
</group>

<group name="Depend" key="dep" mapToObject="om.Depend">
    <field name="Id" key="o" type="NumberKey" mapToProperty="PrimaryKey">
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
    <field name="ObservedId" key="odi" type="String" >
        <required-message>Please enter an id.</required-message>
        <rule name="maxLength" value="255">This is not a valid id.</rule>
    </field>
    <field name="ObserverId" key="ori" type="String" >
        <required-message>Please enter an id.</required-message>
        <rule name="maxLength" value="255">This is not a valid id.</rule>
    </field>
    <field name="TypeId" key="dti" type="NumberKey" >
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
</group>

<group name="Query" key="query" mapToObject="om.Query">
    <field name="Id" key="o" type="NumberKey" mapToProperty="PrimaryKey">
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
    <field name="Name" key="n" type="String">
        <required-message>Please enter a name for this query.</required-message>
        <rule name="maxLength" value="255">Please keep the name to less than 256 characters</rule>
    </field>
    <field name="Description" key="d" type="String">
        <rule name="maxLength" value="255">Please keep the description to less than 256 characters</rule>
    </field>
    <field name="Value" key="v" type="String" />
    <field name="Frequency" key="f" type="NumberKey" mapToProperty="SubscriptionFrequency">
        <required-message>Please select an option.</required-message>
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
    <field name="ScopeId" key="sco" type="NumberKey" >
        <required-message>Please select an option.</required-message>
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
    <field name="ModuleId" key="mi" type="NumberKey" >
        <required-message>If you have selected a project-level query, you must select a project.</required-message>
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
</group>

<group name="IssueTemplateInfo" key="iti" mapToObject="om.IssueTemplateInfo">
    <field name="Id" key="o" type="NumberKey" mapToProperty="PrimaryKey">
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
    <field name="Name" key="n" type="String">
        <required-message>Please enter a name for this template.</required-message>
        <rule name="maxLength" value="255">Please keep the name to less than 256 characters</rule>
    </field>
    <field name="Description" key="d" type="String">
        <rule name="maxLength" value="255">Please keep the description to less than 256 characters</rule>
    </field>
    <field name="ScopeId" key="tti" type="NumberKey" >
        <required-message>Please select an option.</required-message>
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
    <field name="ModuleId" key="mi" type="NumberKey" mapToProperty="">
        <required-message>If you have selected a project-level query, you must select a project.</required-message>
        <rule name="mask" value="[0-9]+">badIdMessage</rule>
    </field>
</group>

<group name="Report" key="rep" mapToObject="om.Report">
        <field name="Type" key="type" type="int">
            <rule name="mask" value="[0-9]+">badIdMessage</rule>
        </field>
        <field name="Name" key="name" type="String">
            <rule name="maxLength" value="255">Attribute name must be less than 255 characters long</rule>
        </field>
        <field name="Description" key="desc" type="String"> 
            <rule name="maxLength" value="255">Attribute description must be less than 255 characters long</rule>
        </field>
        <field name="AttributesAndOptionsForGrouping" key="fao" 
               type="String" multiValued="true"/>
        <field name="NewDate" key="date" type="DateString">
           <rule name="format1" value="MM/dd/yy HH:mm"/>
           <rule name="format2" value="MM/dd/yy"/>
           <rule name="flexible" value="true"/>
        </field>
        <field name="Dates" key="dates" type="DateString" multiValued="true">
           <rule name="format1" value="MM/dd/yy HH:mm"/>
           <rule name="format2" value="MM/dd/yy"/>
           <rule name="flexible" value="true"/>
        </field>
        <field name="Axis1Category" key="a1c" type="int"/>
        <field name="Axis2Category" key="a2c" type="int"/>
        <field name="Axis1Keys" key="a1k" 
               type="String" multiValued="true"/>
        <field name="Axis2Keys" key="a2k" 
               type="String" multiValued="true"/>
</group>

<group name="OptionGroup" key="repog" mapToObject="om.Report$OptionGroup">
    <field name="DisplayValue" key="dv" type="String">
        <rule name="maxLength" 
              value="40">Name must be less than 40 characters long</rule>
    </field>
    <field name="Selected" key="sel" type="boolean"/>
</group>

<group name="ReportDate" key="repdt" mapToObject="om.Report$ReportDate">
    <field name="Date" key="d" type="DateString">
        <rule name="format1" value="MM/dd/yy HH:mm"/>
        <rule name="format2" value="MM/dd/yy"/>
        <rule name="flexible" value="true"/>
    </field>
    <field name="Selected" key="sel" type="boolean"/>
</group>

<group name="MoveIssue" key="mv">
    <field name="Action" key="rb" type="String">
        <rule name="validValues" value="copy|move">Action must be move or copy</rule>
    </field>
    <field name="ModuleId" key="modId" type="NumberKey">
        <rule name="mask" value="[0-9]+">Select a module from the List</rule>
    </field>
    <field name="IssueId" key="issId" type="String">
    </field>
</group>

</input-data>
