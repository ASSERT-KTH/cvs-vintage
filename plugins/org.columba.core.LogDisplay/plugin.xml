<?xml version="1.0"?>
<plugin id="org.columba.core.gui.logdisplay.LogDisplay" 
	name="Log display" 
	description="displays the log for Columba" 
	version="0.9" 
	enabled="true">

	<extension name="org.columba.core.action">
		<action name="LogDisplayAction" class="org.columba.core.gui.logdisplay.DisplayLogAction" />
	</extension>

	<extension name="org.columba.mail.menu">
		<menu name="menu_file" extensionpoint="bottom">
			<menuitem action="LogDisplayAction"/>
			<separator/>
		</menu>
	</extension>

	<runtime type="java" jar="LogDisplay.jar" />
</plugin>
