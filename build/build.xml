    </target>
    -->
    
    <!-- ================================================================== -->
    <!-- Cleans up the build directory                                      -->
    <!-- ================================================================== -->
    <target name="clean" depends="prepare-build.dir">
        <delete dir="${build.project}"/>
    </target>
    <target name="clean-all" depends="prepare-build.dir">
        <delete dir="${build.dir}"/>
    </target>

</project>



